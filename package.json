{
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "etc/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "release": "turbo run release",
    "cli": "./packages/cli/bin/revite",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "eslint --ext .ts,.js,.mjs,.vue --fix ./ && prettier **/*.{md,json,html} --write && turbo run format",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/types": "^7.23.0",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "18.16.16",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "terser": "^5.17.6",
    "turbo": "^1.10.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "lint-staged": {
    "*": [
      "yarn lint"
    ],
    "*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "*.{md,json,html}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "yarn@3.6.4"
}
