{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": true,
    "emitDecoratorMetadata": false,
    "importHelpers": false,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "/~/*": ["./src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client", "node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
