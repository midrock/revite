{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "esnext",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "vue", "dist", "src/**/*.d.ts"]
}
